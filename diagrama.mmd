classDiagram
    class Usuario {
        -int id
        -string nome
        -string email
        -string telefone
        -string endereco
        -string linkedin
        -string github
        -string portfolio
        -DateTime dataCriacao
        +adicionarExperiencia(Experiencia)
        +adicionarFormacao(Formacao)
        +adicionarHabilidade(Habilidade)
        +adicionarCertificacao(Certificacao)
        +adicionarProjeto(Projeto)
        +adicionarIdioma(Idioma)
    }

    class Experiencia {
        -int id
        -string cargo
        -string empresa
        -string descricao
        -DateTime dataInicio
        -DateTime dataFim
        -boolean emAndamento
        -string localizacao
        -List~string~ realizacoes
        +editar()
        +excluir()
    }

    class Formacao {
        -int id
        -string instituicao
        -string curso
        -string nivel
        -DateTime dataInicio
        -DateTime dataFim
        -boolean emAndamento
        -float nota
        -string descricao
        +editar()
        +excluir()
    }

    class Habilidade {
        -int id
        -string nome
        -string categoria
        -string nivel
        -int anosExperiencia
        +editar()
        +excluir()
    }

    class Certificacao {
        -int id
        -string nome
        -string instituicao
        -DateTime dataEmissao
        -DateTime dataExpiracao
        -string credencial
        +editar()
        +excluir()
    }

    class Projeto {
        -int id
        -string nome
        -string descricao
        -string tecnologias
        -string link
        -DateTime dataInicio
        -DateTime dataFim
        +editar()
        +excluir()
    }

    class Idioma {
        -int id
        -string idioma
        -string nivelLeitura
        -string nivelEscrita
        -string nivelConversacao
        +editar()
        +excluir()
    }

    class Vaga {
        -int id
        -string titulo
        -string empresa
        -string descricao
        -List~string~ requisitos
        -List~string~ habilidadesDesejadas
        -DateTime dataCadastro
        +analisarCompatibilidade(Usuario)
    }

    class CurriculoPersonalizado {
        -int id
        -int usuarioId
        -int vagaId
        -DateTime dataCriacao
        -string formato
        +gerar()
        +exportarPDF()
        +exportarWord()
        +visualizar()
    }

    class ItemSelecionado {
        -int id
        -string tipoItem
        -int itemId
        -int ordem
        -boolean destacar
        -string justificativa
    }

    class Template {
        -int id
        -string nome
        -string estilo
        -string layout
        -string cores
        -string fontes
        +aplicar(CurriculoPersonalizado)
    }

    class AnalisadorCompatibilidade {
        +analisarVaga(Vaga)
        +sugerirItens(Usuario, Vaga)
        +calcularScore(Usuario, Vaga)
        +gerarRecomendacoes(Usuario, Vaga)
    }

    class GeradorCurriculo {
        +montarCurriculo(Usuario, ItemSelecionado[], Template)
        +otimizarTexto(string)
        +formatarSecoes(CurriculoPersonalizado)
    }

